<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/image_item_user_profile"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:contentDescription="@null"
        android:src="@drawable/no_image" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dip"
        >

        <TextView
            android:id="@+id/text_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="記事タイトル" />

        <TextView
            android:id="@+id/text_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="13sp"
            android:text="投稿者" />

        <TextView
            android:id="@+id/text_item_created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="13sp"
            android:text="投稿日時" />
        
        <LinearLayout
            android:id="@+id/layout_item_tags"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-2dip"
            android:layout_marginEnd="-2dip"
            >
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/text_item_comment_count"
                android:layout_width="40dip"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/comment"
                android:textColor="@color/gray"
                android:textSize="13sp"
                />
            
            <TextView
                android:id="@+id/text_item_stock_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/stock"
                android:textColor="@color/gray"
                android:textSize="13sp"
                />
        </LinearLayout>

    </LinearLayout>
    
</LinearLayout>
